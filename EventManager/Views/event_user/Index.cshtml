@model IEnumerable<project_eventmanager.Models.event_user>

@{
    ViewBag.Title = "User";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card w-100">
                <div class="card-header">
                    <h4 class="card-title">User</h4>
                    <div class="card-tools">
                        <div class="card-tools">
                            @Html.ActionLink("Create New", "Create")
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table id="dataTable" class="table table-bordered table-striped hover">
                        <thead>
                            <tr>
                                @*<th>
                                    User Id
                                </th>*@
                                <th>
                                    User Name
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Last Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Area1
                                </th>
                                <th>
                                    Area2
                                </th>
                                <th>
                                    Area3
                                </th>
                                <th>
                                    Area4
                                </th>
                                <th>
                                    Position
                                </th>
                                <th>

                                    Enable
                                </th>
                                <th>

                                    Get Email
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.isUserOfSystem)
                                    </th>*@

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.UserId)
                                    </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.UserPassword)
                                        </td>*@
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.event_area.AreaName)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.event_area1.AreaName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.event_area2.AreaName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.event_area3.AreaName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.event_Position.PositionTypeName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.isEnable)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.isReciveEmail)
                                    </td>
                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.isUserOfSystem)
                                        </td>*@

                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.RecordId }, new { @class = "btn btn-sm btn-primary " })
                                        @Html.ActionLink("Details", "Details", new { id = item.RecordId }, new { @class = "btn btn-sm btn-primary " })
                                        @*@Html.ActionLink("Delete", "Delete", new { id = item.RecordId })*@
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
</section>
<script>
    $(function () {
        $(".dataTables_wrapper").css("width", "100%");
        $("#dataTable").DataTable({
            "pageLength": 25,
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
            "responsive": true,
        });
    });
</script>