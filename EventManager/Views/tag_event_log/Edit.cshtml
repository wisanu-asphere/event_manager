@model project_eventmanager.Models.tag_event_log
@{
    ViewBag.Title = "Tag Event";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card w-100">
                <div class="card-header">
                    <h4 class="card-title">Edit Tag Event</h4>
                    <div class="card-tools">
                        <div class="card-tools">
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
                <div class="card-body h-100">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.logid)
                            @Html.HiddenFor(model => model.state_start)
                            @Html.HiddenFor(model => model.event_start)
                            @Html.HiddenFor(model => model.state_end)
                            @Html.HiddenFor(model => model.event_end)
                            @Html.HiddenFor(model => model.last_sendmail)
                
                            @Html.HiddenFor(model => model.event_type)
                            @Html.HiddenFor(model => model.tag_id)
                            @Html.HiddenFor(model => model.tag_name)
                            @Html.HiddenFor(model => model.uom)
                            @Html.HiddenFor(model => model.precision)
                            @Html.HiddenFor(model => model.area1)
                            @Html.HiddenFor(model => model.area2)
                            @Html.HiddenFor(model => model.area3)
                            @Html.HiddenFor(model => model.area4)
                            @Html.HiddenFor(model => model.range4_max)
                            @Html.HiddenFor(model => model.range3_max)
                            @Html.HiddenFor(model => model.range2_max)
                            @Html.HiddenFor(model => model.range1_max)
                            @Html.HiddenFor(model => model.range1_min)
                            @Html.HiddenFor(model => model.range2_min)
                            @Html.HiddenFor(model => model.range3_min)
                            @Html.HiddenFor(model => model.range4_min)
                            @Html.HiddenFor(model => model.range4_max_action)
                            @Html.HiddenFor(model => model.range3_max_action)
                            @Html.HiddenFor(model => model.range2_max_action)
                            @Html.HiddenFor(model => model.range1_max_action)
                            @Html.HiddenFor(model => model.range1_min_action)
                            @Html.HiddenFor(model => model.range2_min_action)
                            @Html.HiddenFor(model => model.range3_min_action)
                            @Html.HiddenFor(model => model.range4_min_action)
                            @Html.HiddenFor(model => model.poll_freq)
                            @Html.HiddenFor(model => model.variable_type)
                            @Html.HiddenFor(model => model.monitoring_enabled)
                            @Html.HiddenFor(model => model.monitoring_state)
                            @Html.HiddenFor(model => model.datasource)
                            @Html.HiddenFor(model => model.process_tag)
                            @Html.HiddenFor(model => model.email_notification_time)
                            @Html.HiddenFor(model => model.enable_email)
                            @Html.HiddenFor(model => model.logdatetime)
                            @Html.HiddenFor(model => model.lastmodify)
                            @Html.HiddenFor(model => model.last_value)
                            @Html.HiddenFor(model => model.last_timestamp)
                            @Html.HiddenFor(model => model.error_messege)
                            @Html.HiddenFor(model => model.next_samplingtime)
                 

                            <div class="form-group row">
                                <label class="control-label col-md-2" for="event_comment">Event Comment</label>
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.event_comment, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.event_comment, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-2" for="eventType">Event Type</label>
                                <div class="col-md-6">
                                    @Html.DropDownList("eventType", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.eventType, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-offset-2 col-md-6">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                                <div class="col-md-offset-2 col-md-6 text-right">
                                    @Html.ActionLink("Back to List", "Index")
                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
